def show_girls_schemes_panel(page: ft.Page):
    page.clean()

    scroll = ft.Column(scroll=ft.ScrollMode.ALWAYS, expand=True, controls=[])

    # Back button
    back_button = ft.ElevatedButton(
        text="←",
        width=30,
        height=30,
        style=ft.ButtonStyle(
            bgcolor="#FFFFFF",
            color="#000000",
            shape=ft.RoundedRectangleBorder(radius=15)
        ),
        on_click=lambda e: create_main_panel(page)
    )

    # Frame 1: Swadhar Greh Scheme
    swadhar_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "1.Beti Bachao Beti Padhao Scheme",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (70).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "The BBBP scheme has made notable progress in raising awareness and initiating dialogue on gender equality across India, contributing to changes in attitudes toward the girl child, their access to education and opportunities,Preventing Gender Discrimination: Focuses on saving the girl child from female foeticide, ensuring that girls are not discriminated against and have equal opportunities for growth, promoting education and encouraging the education of girls by spreading awareness about the importance of educating the girl child and offering support to families for their education.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
                            text="Click here to find out more!",
                            width=300,
                            height=45,
                            style=ft.ButtonStyle(bgcolor="#6CCBFF", color="black"),
                            on_click=lambda e: page.launch_url("https://www.ibef.org/government-schemes/beti-bachao-beti-padhao")
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER
                )
            ],
            spacing=10
        )
    )

    # Frame 2: Widow Pension Scheme
    widow_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "2.The Sukanya Samriddhi Yojana (SSY)",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (81).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "The Sukanya Samriddhi Yojana is a government-backed savings scheme launched as part of the Beti Bachao Beti Padhao (BBBP) initiative. The scheme is designed to promote the welfare of the girl child by encouraging parents to save for their daughters' education. The scheme offers a safe, secure, and high-interest savings option, ensuring a bright future for girls.The scheme promotes gender equality by ensuring that every girl child has access to the financial resources needed for her education and marriage. Its tax benefits, high interest rates, and safety make it one of the most attractive investment options for parents who want to secure their daughters' future.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
