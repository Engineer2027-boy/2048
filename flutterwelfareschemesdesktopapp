# -*- coding: utf-8 -*-
import flet
import flet as ft


def create_main_panel(page: ft.Page):
    page.clean()

    # Scrollable content
    scroll = ft.Column(scroll=ft.ScrollMode.ALWAYS, controls=[], expand=True)

    # Back Button
    back_button = ft.ElevatedButton(
        text="←",
        width=30,
        height=30,
        style=ft.ButtonStyle(
            bgcolor="#FFFFFF",
            color="#000000",
            shape=ft.RoundedRectangleBorder(radius=15)
        ),
        on_click=lambda e: go_back_to_main(page)
    )

    # Title
    title_label = ft.Container(
        content=ft.Text(
            "SCHEMES FOR YOU",
            size=40,
            weight=ft.FontWeight.BOLD,
            italic=True,
            color="#000000"
        ),
        alignment=ft.alignment.center,
        margin=ft.margin.only(top=30)  # optional, adjust vertical spacing as needed
    )

    # Button labels and grid
    labels = ["CHILDREN", "WIDOWS", "WOMEN", "GIRLS", "SENIOR\nCITIZEN", "STUDENTS"]
    grid_buttons = ft.Row([
        ft.Column([
            ft.ElevatedButton(text=labels[0], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_children_schemes_panel(page)),
            ft.ElevatedButton(text=labels[3], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_girls_schemes_panel(page))
        ]),
        ft.Column([
            ft.ElevatedButton(text=labels[1], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_widow_schemes_panel(page)),
            ft.ElevatedButton(text=labels[4], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_Elderly_schemes_panel(page))
        ]),
        ft.Column([
            ft.ElevatedButton(text=labels[2], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_women_schemes_panel(page)),
            ft.ElevatedButton(text=labels[5], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_student_schemes_panel(page))
        ])
    ], alignment=ft.MainAxisAlignment.CENTER, spacing=10)

    # Image Display
    image_path = "assets/Screenshot (91).png"
    image_control = ft.Image(src=image_path, width=262, height=380, fit=ft.ImageFit.COVER)

    # Bottom Text
    bottom_text = ft.Text(
        "Unlock the benefits you deserve.\n"
        "Find government schemes tailored to you—\n"
        "quickly, clearly, and confidently.",
        size=24,
        weight=ft.FontWeight.BOLD,
        color="#000000"
    )

    scroll.controls.extend([
        ft.Row([back_button], alignment=ft.MainAxisAlignment.START),
        title_label,
        ft.Container(grid_buttons, margin=ft.margin.only(top=20, bottom=20)),
        ft.Container(image_control, alignment=ft.alignment.center),
        ft.Container(bottom_text, padding=ft.padding.all(20))
    ])

    page.add(scroll)


def create_main_panel1(page: ft.Page):
    page.clean()

    # Scrollable content
    scroll = ft.Column(scroll=ft.ScrollMode.ALWAYS, controls=[], expand=True)

    # Back Button
    back_button = ft.ElevatedButton(
        text="←",
        width=30,
        height=30,
        style=ft.ButtonStyle(
            bgcolor="#FFFFFF",
            color="#000000",
            shape=ft.RoundedRectangleBorder(radius=15)
        ),
        on_click=lambda e: go_back_to_main(page)
    )

    # Title
    title_label = ft.Container(
        content=ft.Text(
            "ನಿಮಗಾಗಿ ಕಲ್ಯಾಣ ಯೋಜನೆಗಳು",
            size=40,
            weight=ft.FontWeight.BOLD,
            italic=True,
            color="#000000"
        ),
        alignment=ft.alignment.center,
        margin=ft.margin.only(top=30)  # optional, adjust vertical spacing as needed
    )

    # Button labels and grid
    labels = ["ಮಕ್ಕಳು", "ವಿಧವೆ", "ಮಹಿಳೆಯರು", "ಹುಡುಗಿಯರು", "ಹಿರಿಯ\nನಾಗರಿಕ", "ವಿದ್ಯಾರ್ಥಿ"]
    grid_buttons = ft.Row([
        ft.Column([
            ft.ElevatedButton(text=labels[0], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_children_schemes_panel_k(page)),
            ft.ElevatedButton(text=labels[3], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_girls_schemes_panel_k(page))
        ]),
        ft.Column([
            ft.ElevatedButton(text=labels[1], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_widow_schemes_panel_k(page)),
            ft.ElevatedButton(text=labels[4], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_Elderly_schemes_panel_k(page))
        ]),
        ft.Column([
            ft.ElevatedButton(text=labels[2], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_women_schemes_panel_k(page)),
            ft.ElevatedButton(text=labels[5], width=112, height=51,
                              style=ft.ButtonStyle(bgcolor="#000000", color="#FFFFFF"),
                              on_click=lambda e: show_student_schemes_panel_k(page))
        ])
    ], alignment=ft.MainAxisAlignment.CENTER, spacing=10)

    # Image Display
    image_path = "assets/Screenshot (91).png"
    image_control = ft.Image(src=image_path, width=262, height=380, fit=ft.ImageFit.COVER)

    # Bottom Text
    bottom_text = ft.Text(
        "ನಿಮಗೆ ಅರ್ಹವಾದ ಪ್ರಯೋಜನಗಳನ್ನು ಅನ್ಲಾಕ್ ಮಾಡಿ. ನಿಮಗೆ ಅನುಗುಣವಾಗಿರುವ ಸರ್ಕಾರಿ ಯೋಜನೆಗಳನ್ನು ತ್ವರಿತವಾಗಿ, ಸ್ಪಷ್ಟವಾಗಿ ಮತ್ತು ವಿಶ್ವಾಸದಿಂದ ಕಂಡುಕೊಳ್ಳಿ.",
        size=24,
        weight=ft.FontWeight.BOLD,
        color="#000000"
    )

    scroll.controls.extend([
        ft.Row([back_button], alignment=ft.MainAxisAlignment.START),
        title_label,
        ft.Container(grid_buttons, margin=ft.margin.only(top=20, bottom=20)),
        ft.Container(image_control, alignment=ft.alignment.center),
        ft.Container(bottom_text, padding=ft.padding.all(20))
    ])

    page.add(scroll)


def on_button_click(page, label):
    page.dialog = ft.AlertDialog(title=ft.Text(f"You clicked: {label}"))
    page.dialog.open = True
    page.update()


def go_back_to_main(page: ft.Page):
    print("Going back to main")
    page.clean()
    main(page)
    page.update()  # make sure update is called


def main(page: ft.Page):
    print("Inside MAIN PAGE")
    page.clean()
    page.bgcolor = "#BEEFF3"
    page.scroll = "auto"
    page.route = "/"
    page.title = "Schemes For You"
    page.bgcolor = "#BEEFF3"
    page.scroll = "auto"

    image_path = "assets/Screenshot (92).png"  # Replace with your image path

    schemes_label = ft.Container(
        content=ft.Text(
            "SCHEMES FOR YOU",
            size=32,
            font_family="Kaushan Script",
            color="black"
        ),
        alignment=ft.alignment.center,
        margin=ft.margin.only(top=30)
    )

    image = ft.Image(
        src=image_path,
        width=397,
        height=264,
        fit=ft.ImageFit.FILL
    )

    subtitle = ft.Text(
        "ONE PLACE TO\nCHECK ALL SCHEMES\nAVAILABLE",
        size=34,
        font_family="Kaushan Script",
        color="black",
        text_align=ft.TextAlign.CENTER
    )

    kannada_button = ft.ElevatedButton(
        text="Kannada",
        width=313,
        height=48,
        style=ft.ButtonStyle(
            bgcolor="#000000",
            color="#FFFFFF",
            shape=ft.RoundedRectangleBorder(radius=50)
        ),
        on_click=lambda _: create_main_panel1(page)
    )

    english_button = ft.ElevatedButton(
        text="English",
        width=313,
        height=48,
        style=ft.ButtonStyle(
            bgcolor="#000000",
            color="#FFFFFF",
            shape=ft.RoundedRectangleBorder(radius=50)
        ),
        on_click=lambda _: create_main_panel(page)
    )

    page.add(
        ft.Column([
            schemes_label,
            ft.Container(content=image, alignment=ft.alignment.center, margin=ft.margin.only(top=100, bottom=20)),
            subtitle,
            ft.Container(content=kannada_button, alignment=ft.alignment.center, margin=ft.margin.only(top=20)),
            ft.Container(content=english_button, alignment=ft.alignment.center, margin=ft.margin.only(bottom=20)),
        ],
            alignment=ft.MainAxisAlignment.START,
            horizontal_alignment=ft.CrossAxisAlignment.CENTER)
    )


def show_widow_schemes_panel(page: ft.Page):
    page.clean()

    scroll = ft.Column(scroll=ft.ScrollMode.ALWAYS, expand=True, controls=[])

    # Back button
    back_button = ft.ElevatedButton(
        text="←",
        width=30,
        height=30,
        style=ft.ButtonStyle(
            bgcolor="#FFFFFF",
            color="#000000",
            shape=ft.RoundedRectangleBorder(radius=15)
        ),
        on_click=lambda e: create_main_panel(page)
    )

    # Frame 1: Swadhar Greh Scheme
    swadhar_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "1. Swadhar Greh Scheme",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (78).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "The Swadhar Greh Scheme is an initiative launched by the Ministry of Women and Child Development (MWCD), Government of India, to provide support and rehabilitation to women in difficult circumstances. This scheme specifically focuses on women who are destitute, homeless, abandoned, or survivors of violence such as trafficking, domestic violence, and abuse or those who have lost their husbands and can't provide for themselves. The primary goal of Swadhar Greh is to offer a safe and secure environment for women in distress, as well as provide them with opportunities to rebuild their lives.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
                            text="Click here to find out more!",
                            width=300,
                            height=45,
                            style=ft.ButtonStyle(bgcolor="#6CCBFF", color="black"),
                            on_click=lambda e: page.launch_url("https://www.india.gov.in/spotlight/swadhar-greh-scheme")
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER
                )
            ],
            spacing=10
        )
    )

    # Frame 2: Widow Pension Scheme
    widow_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "2. Widow Pension Scheme",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (79).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "The Widow Pension Scheme (State-Level) is a welfare initiative implemented by individual state governments in India to provide financial support to widows, particularly those who are economically disadvantaged and have no other means of support. The scheme aims to improve the well-being and security of widows by offering a regular income, thereby helping them lead a dignified life after the loss of their spouse.By providing a regular pension, the scheme offers financial security and helps improve the quality of life for widows, ensuring that they are not left vulnerable or dependent.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
                            text="Click here to find out more!",
                            width=300,
                            height=45,
                            style=ft.ButtonStyle(bgcolor="#6CCBFF", color="black"),
                            on_click=lambda e: page.launch_url("https://sevasindhu.karnataka.gov.in/category/Widow%20Pension.html")
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER
                )
            ],
            spacing=10
        )
    )

    # Add everything to scrollable layout
    scroll.controls.extend([
        ft.Row([back_button], alignment=ft.MainAxisAlignment.START),
        ft.Container(content=swadhar_frame, padding=ft.padding.only(top=10, bottom=10)),
        ft.Container(content=widow_frame, padding=ft.padding.only(top=0, bottom=20)),
    ])

    page.add(scroll)


def show_Elderly_schemes_panel(page: ft.Page):
    page.clean()

    scroll = ft.Column(scroll=ft.ScrollMode.ALWAYS, expand=True, controls=[])

    # Back button
    back_button = ft.ElevatedButton(
        text="←",
        width=30,
        height=30,
        style=ft.ButtonStyle(
            bgcolor="#FFFFFF",
            color="#000000",
            shape=ft.RoundedRectangleBorder(radius=15)
        ),
        on_click=lambda e: create_main_panel(page)
    )

    # Frame 1: Swadhar Greh Scheme
    swadhar_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "1.Indira Gandhi National Old Age Pension\nScheme",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (67).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "The Indira Gandhi National Old Age Pension Scheme (IGNOAPS) is a government initiative aimed at providing financial assistance to elderly citizens, particularly those living below the poverty line (BPL). Launched as part of the National Social Assistance Programme (NSAP) in 1995, the scheme is designed to help senior citizens who do not have adequate financial resources to support themselves in their old age. This Scheme plays a crucial role in improving the quality of life for elderly citizens in India, especially those facing economic challenges. By providing a regular source of income, it helps reduce poverty among senior citizens and ensures they can live with dignity in their later years.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
                            text="Click here to find out more!",
                            width=300,
                            height=45,
                            style=ft.ButtonStyle(bgcolor="#6CCBFF", color="black"),
                            on_click=lambda e: page.launch_url("https://www.myscheme.gov.in/schemes/nsap-ignoaps")
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER
                )
            ],
            spacing=10
        )
    )

    # Frame 2: Widow Pension Scheme
    widow_frame = ft.Container(
        bgcolor="#FFFFFF",
        border_radius=10,
        padding=15,
        content=ft.Column(
            controls=[
                ft.Text(
                    "2.Rashtriya Vayoshri Yojana (RVY)",
                    size=20,
                    weight=ft.FontWeight.W600,
                    color="#000000"
                ),
                ft.Image(
                    src="assets/Screenshot (76).png",
                    width=384,
                    height=245,
                    fit=ft.ImageFit.COVER
                ),
                ft.Text(
                    "This Scheme provides physical aids and assistive devices to senior citizens suffering from age-related disabilities to enhance their quality of life.Senior citizens aged 60 years and above who are living below the poverty line and have physical disabilities. The main benefits of this scheme contain free provision of devices like hearing aids, walkers, wheelchairs, and spectacles.",
                    size=15,
                    color="#000000",
                    max_lines=None
                ),
                ft.Row(
                    controls=[
                        ft.ElevatedButton(
                            text="Click here to find out more!",
                            width=300,
                            height=45,
                            style=ft.ButtonStyle(bgcolor="#6CCBFF", color="black"),
                            on_click=lambda e: page.launch_url("https://www.india.gov.in/spotlight/rashtriya-vayoshri-yojana")
                        )
                    ],
                    alignment=ft.MainAxisAlignment.CENTER
                )
            ],
            spacing=10
        )
    )

    # Add everything to scrollable layout
    scroll.controls.extend([
        ft.Row([back_button], alignment=ft.MainAxisAlignment.START),
        ft.Container(content=swadhar_frame, padding=ft.padding.only(top=10, bottom=10)),
        ft.Container(content=widow_frame, padding=ft.padding.only(top=0, bottom=20)),
    ])

    page.add(scroll)


