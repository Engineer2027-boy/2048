        img2 = img2.resize((384, 245))
        img2_ctk = ctk.CTkImage(light_image=img2, size=(384, 245))
        img_label2 = ctk.CTkLabel(frame2, image=img2_ctk, text="")
        img_label2.image = img2_ctk
