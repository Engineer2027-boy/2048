# coding: utf-8
import webbrowser
import customtkinter as ctk
from customtkinter import CTkImage
from PIL import Image

# Appearance settings
ctk.set_appearance_mode("light")
ctk.set_default_color_theme("blue")

# Root window setup
root = ctk.CTk()
root.geometry("432x932")
root.title("Schemes For You")

# Create container frame
container = ctk.CTkFrame(root)
container.pack(fill="both", expand=True)


def create_welcome_screen():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Set the main container background color
    container.configure(fg_color="#BEEFF3")  # <-- Set background color here

    # Scrollable frame (also set its background to match)
    scrollable_frame = ctk.CTkScrollableFrame(
        master=container,
        width=432,
        height=930,
        fg_color="#BEEFF3"  # <-- Apply same color here
    )
    scrollable_frame.pack(fill="both", expand=True, padx=10, pady=10)

    status_frame = ctk.CTkFrame(
        container,
        height=30,
        fg_color="#BEEFF3"  # <-- Apply same color here
    )
    status_frame.pack(fill="x", padx=5, pady=5)

    # Load and display image
    image_path = "C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (92).png"
    image = Image.open(image_path)
    resized_image = image.resize((397, 264), Image.Resampling.LANCZOS)
    photo = CTkImage(light_image=resized_image, size=(397, 264))

    image_label = ctk.CTkLabel(
        scrollable_frame,
        image=photo,
        text="",
        fg_color="#BEEFF3"  # <-- Optional: Set label background
    )
    image_label.pack(pady=(145, 20))

    # Text at exact position (77, 57)
    text_label = ctk.CTkLabel(
        master=scrollable_frame,
        text="SCHEMES FOR YOU",
        font=("Kaushan Script", 24),
        text_color="black",
        fg_color="#BEEFF3"  # <-- Optional: Set label background
    )
    text_label.place(x=77, y=57)

    # Text below image
    text_label1 = ctk.CTkLabel(
        master=scrollable_frame,
        text="ONE PLACE TO\nCHECK ALL SCHEMES\nAVAILABLE",
        font=("Kaushan Script", 34),
        text_color="black",
        fg_color="#BEEFF3"  # <-- Optional: Set label background
    )
    text_label1.pack(pady=(20, 20))

    # Kannada Button
    kannada_button = ctk.CTkButton(
        master=scrollable_frame,
        text="Kannada",
        width=313,
        height=48,
        corner_radius=50,
        fg_color="black",
        text_color="white",
        font=("Arial", 24),
        command=create_main_panel1
    )
    kannada_button.pack(pady=(20, 20))

    # English Button - connects to main panel
    english_button = ctk.CTkButton(
        master=scrollable_frame,
        text="English",
        width=313,
        height=48,
        corner_radius=50,
        fg_color="black",
        text_color="white",
        font=("Arial", 24),
        command=create_main_panel
    )
    english_button.pack(pady=(0, 20))


def create_main_panel():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Create a main frame to hold everything
    main_frame = ctk.CTkFrame(container, width=432, height=932, fg_color="#BEEFF3")
    main_frame.pack(fill="both", expand=True)

    # Create scrollable frame WITHIN the main frame
    scrollable_frame = ctk.CTkScrollableFrame(
        master=main_frame,
        width=432,
        height=932,  # Match container height
        fg_color="#BEEFF3",
        scrollbar_button_color="#BEEFF3",
        scrollbar_button_hover_color="#BEEFF3"
    )
    scrollable_frame.pack(fill="both", expand=True)

    # Set a minimum content height to ensure scrolling works
    content_frame = ctk.CTkFrame(scrollable_frame, fg_color="#BEEFF3", height=1000)  # Tall enough to show all content
    content_frame.pack(fill="x", expand=True)

    # Title label - now in content frame

    back_button = ctk.CTkButton(
        content_frame,
        text="←",
        width=30,
        height=30,
        corner_radius=15,  # Makes it circular
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_welcome_screen
    )
    back_button.place(x=10, y=10)

    title_label = ctk.CTkLabel(
        master=content_frame,
        text="SCHEMES FOR YOU",
        text_color="#FFFFFF",
        font=("Inter ExtraBold Italic", 40),
        width=399,
        height=73,
        fg_color="#BEEFF3"
    )
    title_label.place(x=19, y=43)

    # Button labels
    labels = [
        "CHILDREN",
        "WIDOWS",
        "WOMEN",
        "GIRLS",
        "SENIOR\nCITIZEN",
        "STUDENTS"
    ]

    # Button positions
    positions = [
        (21, 145),   # Button 1
        (157, 145),  # Button 2
        (293, 145),  # Button 3
        (21, 210),   # Button 4
        (157, 210),  # Button 5
        (293, 210)   # Button 6
    ]

    # Create buttons in 3x2 grid
    for i, (label, (x, y)) in enumerate(zip(labels, positions)):
        button = ctk.CTkButton(
            master=content_frame,
            text=label,
            width=112,
            height=51,
            corner_radius=10,
            font=("Inter Medium", 15),
            fg_color="black",
            text_color="white",
            command=lambda lbl=label: on_button_click(lbl)
        )
        button.place(x=x, y=y)

    # Image field
    try:
        image = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (91).png")
        image = image.resize((262, 380))
        img_tk = ctk.CTkImage(light_image=image, size=(262, 380))
        image_label = ctk.CTkLabel(content_frame, image=img_tk, text="")
        image_label.place(x=92, y=322)
    except:
        # Fallback if image not found
        image_frame = ctk.CTkFrame(content_frame, width=262, height=380, fg_color="#FFFFFF")
        image_frame.place(x=92, y=322)
        no_image_label = ctk.CTkLabel(image_frame, text="Image not found", font=("Inter Medium", 15))
        no_image_label.place(relx=0.5, rely=0.5, anchor="center")

    # Bottom text
    bottom_text = ctk.CTkLabel(
        master=content_frame,
        text="Unlock the benefits you deserve.\nFind government schemes tailored to you—\nquickly, clearly, and confidently.",
        text_color="#000000",
        font=("Inter Bold", 24),
        justify="left",
        wraplength=400
    )
    bottom_text.place(x=22, y=720)

    # Force the scrollable frame to update its scrollable region
    content_frame.update_idletasks()
    scrollable_frame._parent_canvas.configure(scrollregion=scrollable_frame._parent_canvas.bbox("all"))


def create_main_panel1():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Create a main frame to hold everything
    main_frame = ctk.CTkFrame(container, width=432, height=932, fg_color="#BEEFF3")
    main_frame.pack(fill="both", expand=True)

    # Create scrollable frame WITHIN the main frame
    scrollable_frame = ctk.CTkScrollableFrame(
        master=main_frame,
        width=432,
        height=932,  # Match container height
        fg_color="#BEEFF3",
        scrollbar_button_color="#BEEFF3",
        scrollbar_button_hover_color="#BEEFF3"
    )
    scrollable_frame.pack(fill="both", expand=True)

    # Set a minimum content height to ensure scrolling works
    content_frame = ctk.CTkFrame(scrollable_frame, fg_color="#BEEFF3", height=1000)  # Tall enough to show all content
    content_frame.pack(fill="x", expand=True)

    back_button = ctk.CTkButton(
        content_frame,
        text="←",
        width=30,
        height=30,
        corner_radius=15,  # Makes it circular
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_welcome_screen
    )
    back_button.place(x=10, y=10)
    
    # Title label - now in content frame
    title_label = ctk.CTkLabel(
        master=content_frame,
        text="ನಿಮಗಾಗಿ ಕಲ್ಯಾಣ ಯೋಜನೆಗಳು",
        text_color="#FFFFFF",
        font=("Inter ExtraBold Italic", 40),
        width=399,
        height=73,
        fg_color="#BEEFF3"
    )
    title_label.place(x=19, y=43)


    # Button labels
    labels = [
        "ಮಕ್ಕಳು",
        "ವಿಧವೆ",
        "ಮಹಿಳೆಯರು",
        "ಹುಡುಗಿಯರು",
        "ಹಿರಿಯ\nನಾಗರಿಕ",
        "ವಿದ್ಯಾರ್ಥಿ"
    ]

    # Button positions
    positions = [
        (21, 145),   # Button 1
        (157, 145),  # Button 2
        (293, 145),  # Button 3
        (21, 210),   # Button 4
        (157, 210),  # Button 5
        (293, 210)   # Button 6
    ]

    # Create buttons in 3x2 grid
    for i, (label, (x, y)) in enumerate(zip(labels, positions)):
        button = ctk.CTkButton(
            master=content_frame,
            text=label,
            width=112,
            height=51,
            corner_radius=10,
            font=("Inter Medium", 15),
            fg_color="black",
            text_color="white",
            command=lambda lbl=label: on_button_click1(lbl)
        )
        button.place(x=x, y=y)

    # Image field
    try:
        image = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (91).png")
        image = image.resize((262, 380))
        img_tk = ctk.CTkImage(light_image=image, size=(262, 380))
        image_label = ctk.CTkLabel(content_frame, image=img_tk, text="")
        image_label.place(x=92, y=322)
    except:
        # Fallback if image not found
        image_frame = ctk.CTkFrame(content_frame, width=262, height=380, fg_color="#FFFFFF")
        image_frame.place(x=92, y=322)
        no_image_label = ctk.CTkLabel(image_frame, text="Image not found", font=("Inter Medium", 15))
        no_image_label.place(relx=0.5, rely=0.5, anchor="center")

    # Bottom text
    bottom_text = ctk.CTkLabel(
        master=content_frame,
        text="ನಿಮಗೆ ಅರ್ಹವಾದ ಪ್ರಯೋಜನಗಳನ್ನು \nಅನ್ಲಾಕ್ ಮಾಡಿ. ನಿಮಗೆ ಅನುಗುಣವಾಗಿರುವ ಸರ್ಕಾರಿ ಯೋಜನೆಗಳನ್ನು \nತ್ವರಿತವಾಗಿ, ಸ್ಪಷ್ಟವಾಗಿ ಮತ್ತು ವಿಶ್ವಾಸದಿಂದ ಕಂಡುಕೊಳ್ಳಿ.",
        text_color="#000000",
        font=("Inter Bold", 24),
        justify="left",
        wraplength=400
    )
    bottom_text.place(x=22, y=720)

    # Force the scrollable frame to update its scrollable region
    content_frame.update_idletasks()
    scrollable_frame._parent_canvas.configure(scrollregion=scrollable_frame._parent_canvas.bbox("all"))


def show_second_panel():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Create scrollable frame
    scrollable_frame = ctk.CTkScrollableFrame(container, fg_color="#BEEFF3")
    scrollable_frame.pack(fill="both", expand=True)

    # Add circular back button at top left
    back_button = ctk.CTkButton(
        scrollable_frame,
        text="←",
        width=30,
        height=30,
        corner_radius=15,  # Makes it circular
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_main_panel
    )
    back_button.place(x=10, y=10)

    # First frame in scrollable area (with adjusted y-position to account for back button)
    frame1 = ctk.CTkFrame(scrollable_frame, width=400, height=622, corner_radius=10, fg_color="#FFFFFF")
    frame1.pack(pady=(50, 15), fill="x", expand=True)  # Increased top padding

    # Add content to frame1
    textfield1 = ctk.CTkLabel(frame1, text="1.Swadhar Greh Scheme", font=("Inter Medium", 20), text_color="#000000")
    textfield1.place(x=21, y=13)

    def open_swadhar_scheme():
        webbrowser.open("https://www.india.gov.in/spotlight/swadhar-greh-scheme")

    # Add the clickable button to frame1
    info_button = ctk.CTkButton(
        frame1,
        text="",
        width=300,
        height=45,
        corner_radius=25,
        fg_color="#6CCBFF",
        hover_color="#5BB0E0",
        command=open_swadhar_scheme
    )
    info_button.place(x=61, y=564)

    # Add the text label inside the button
    button_text = ctk.CTkLabel(
        info_button,
        text="Click here to find out more!",
        width=260,
        height=28,
        font=("Inter Regular", 15)
    )
    button_text.place(x=14, y=9)

    # Load and display image in frame1
    try:
        image = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (78).png")
        image = image.resize((384, 245))
        img_tk = ctk.CTkImage(light_image=image, size=(384, 245))
        image_label = ctk.CTkLabel(frame1, image=img_tk, text="")
        image_label.image = img_tk
        image_label.place(x=19, y=62)
    except:
        no_image_label = ctk.CTkLabel(frame1, text="Image not found", font=("Inter Medium", 15))
        no_image_label.place(x=19, y=62, width=384, height=245)

    # Add the text field
    scheme_description = ctk.CTkLabel(
        frame1,
        text="The Swadhar Greh Scheme is an initiative launched by the Ministry of Women and Child Development (MWCD), Government of India, to provide support and rehabilitation to women in difficult circumstances. This scheme specifically focuses on women who are destitute, homeless, abandoned, or survivors of violence such as trafficking, domestic violence, and abuse or those who have lost their husbands and can't provide for themselves. The primary goal of Swadhar Greh is to offer a safe and secure environment for women in distress, as well as provide them with opportunities to rebuild their lives.",
        font=("Inter Regular", 15),
        text_color="#000000",
        width=383,
        height=224,
        wraplength=380,
        justify="left"
    )
    scheme_description.place(x=21, y=330)

    # Second frame in scrollable area
    frame2 = ctk.CTkFrame(scrollable_frame, width=400, height=620, corner_radius=10, fg_color="#FFFFFF")
    frame2.pack(pady=15, fill="x", expand=True)

    # Add content to frame2
    textfield2 = ctk.CTkLabel(frame2, text="2. Widow Pension Scheme", font=("Inter Medium", 20), text_color="#000000")
    textfield2.place(x=21, y=13)

    def open_widow_scheme():
        webbrowser.open("https://sevasindhu.karnataka.gov.in/category/Widow%20Pension.html")

    # Add the clickable button to frame2
    info_button2 = ctk.CTkButton(
        frame2,
        text="",
        width=300,
        height=45,
        corner_radius=25,
        fg_color="#6CCBFF",
        hover_color="#5BB0E0",
        command=open_widow_scheme
    )
    info_button2.place(x=61, y=564)

    button_text2 = ctk.CTkLabel(
        info_button2,
        text="Click here to find out more!",
        width=260,
        height=28,
        font=("Inter Regular", 15)
    )
    button_text2.place(x=14, y=9)

    # Load and display image in frame2
    try:
        image2 = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (79).png")
        image2 = image2.resize((384, 245))
        img_tk2 = ctk.CTkImage(light_image=image2, size=(384, 245))
        image_label2 = ctk.CTkLabel(frame2, image=img_tk2, text="")
        image_label2.image = img_tk2
        image_label2.place(x=19, y=62)
    except:
        no_image_label2 = ctk.CTkLabel(frame2, text="Image not found", font=("Inter Medium", 15))
        no_image_label2.place(x=19, y=62, width=384, height=245)

    # Add description
    scheme_description2 = ctk.CTkLabel(
        frame2,
        text="The Widow Pension Scheme (State-Level) is a welfare initiative implemented by individual state governments in India to provide financial support to widows, particularly those who are economically disadvantaged and have no other means of support. The scheme aims to improve the well-being and security of widows by offering a regular income, thereby helping them lead a dignified life after the loss of their spouse.By providing a regular pension, the scheme offers financial security and helps improve the quality of life for widows, ensuring that they are not left vulnerable or dependent.",
        font=("Inter Regular", 15),
        text_color="#000000",
        width=383,
        height=224,
        wraplength=380,
        justify="left"
    )
    scheme_description2.place(x=21, y=330)


def show_third_panel():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Create main container frame that will hold both the back button and scrollable frame
    main_frame = ctk.CTkFrame(container, fg_color="#BEEFF3")
    main_frame.pack(fill="both", expand=True)

    # Back button - placed in the main frame (not in the scrollable frame)
    back_button = ctk.CTkButton(
        main_frame,
        text="←",
        width=30,
        height=30,
        corner_radius=15,
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_main_panel
    )
    back_button.place(x=10, y=10)

    # Create scrollable frame below the back button
    scrollable_frame = ctk.CTkScrollableFrame(
        main_frame,
        fg_color="#BEEFF3",
        # Adjust height to account for back button
        height=container.winfo_height() - 50 if container.winfo_height() > 0 else 600
    )
    scrollable_frame.pack(fill="both", expand=True, pady=(50, 0))  # Add top padding for the back button

    # Frame 1: Senior Citizen Scheme 1
    frame1 = ctk.CTkFrame(scrollable_frame, width=400, height=660, corner_radius=10, fg_color="#FFFFFF")
    frame1.pack(pady=10, fill="x", expand=True)

    textfield1 = ctk.CTkLabel(frame1, text="1.Indira Gandhi National Old Age Pension\nScheme",
                              font=("Inter Medium", 20), text_color="#000000")
    textfield1.place(x=21, y=13)

    def open_senior_scheme_1():
        webbrowser.open("https://www.myscheme.gov.in/schemes/nsap-ignoaps")

    info_button = ctk.CTkButton(
        frame1,
        text="",
        width=300,
        height=45,
        corner_radius=25,
        fg_color="#6CCBFF",
        hover_color="#5BB0E0",
        command=open_senior_scheme_1
    )
    info_button.place(x=61, y=600)
    button_text = ctk.CTkLabel(
        info_button,
        text="Click here to find out more!",
        width=260,
        height=28,
        font=("Inter Regular", 15)
    )
    button_text.place(x=14, y=9)

    try:
        image = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (67).png")
        image = image.resize((384, 245))
        img_tk = ctk.CTkImage(light_image=image, size=(384, 245))
        image_label = ctk.CTkLabel(frame1, image=img_tk, text="")
        image_label.image = img_tk
        image_label.place(x=19, y=62)
    except:
        no_image_label = ctk.CTkLabel(frame1, text="Image not found", font=("Inter Medium", 15))
        no_image_label.place(x=19, y=62, width=384, height=245)

    scheme_description = ctk.CTkLabel(
        frame1,
        text="The Indira Gandhi National Old Age Pension Scheme (IGNOAPS) is a government initiative aimed at providing financial assistance to elderly citizens, particularly those living below the poverty line (BPL). Launched as part of the National Social Assistance Programme (NSAP) in 1995, the scheme is designed to help senior citizens who do not have adequate financial resources to support themselves in their old age. This Scheme plays a crucial role in improving the quality of life for elderly citizens in India, especially those facing economic challenges. By providing a regular source of income, it helps reduce poverty among senior citizens and ensures they can live with dignity in their later years.",
        font=("Inter Regular", 15),
        text_color="#000000",
        width=383,
        height=224,
        wraplength=380,
        justify="left"
    )
    scheme_description.place(x=21, y=330)

    # Frame 2: Senior Citizen Scheme 2
    frame2 = ctk.CTkFrame(scrollable_frame, width=400, height=550, corner_radius=10, fg_color="#FFFFFF")
    frame2.pack(pady=10, fill="x", expand=True)

    textfield2 = ctk.CTkLabel(frame2, text="2.Rashtriya Vayoshri Yojana (RVY)", font=("Inter Medium", 20),
                              text_color="#000000")
    textfield2.place(x=21, y=13)

    def open_senior_scheme_2():
        webbrowser.open("https://www.india.gov.in/spotlight/rashtriya-vayoshri-yojana")

    info_button2 = ctk.CTkButton(
        frame2,
        text="",
        width=300,
        height=45,
        corner_radius=25,
        fg_color="#6CCBFF",
        hover_color="#5BB0E0",
        command=open_senior_scheme_2
    )
    info_button2.place(x=61, y=475)

    button_text2 = ctk.CTkLabel(
        info_button2,
        text="Click here to find out more!",
        width=260,
        height=28,
        font=("Inter Regular", 15)
    )
    button_text2.place(x=14, y=9)

    try:
        image2 = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (76).png")
        image2 = image2.resize((384, 245))
        img_tk2 = ctk.CTkImage(light_image=image2, size=(384, 245))
        image_label2 = ctk.CTkLabel(frame2, image=img_tk2, text="")
        image_label2.image = img_tk2
        image_label2.place(x=19, y=62)
    except:
        no_image_label2 = ctk.CTkLabel(frame2, text="Image not found", font=("Inter Medium", 15))
        no_image_label2.place(x=19, y=62, width=384, height=245)

    scheme_description2 = ctk.CTkLabel(
        frame2,
        text="This Scheme provides physical aids and assistive devices to senior citizens suffering from age-related disabilities to enhance their quality of life.Senior citizens aged 60 years and above who are living below the poverty line and have physical disabilities. The main benefits of this scheme contain free provision of devices like hearing aids, walkers, wheelchairs, and spectacles.",
        font=("Inter Regular", 15),
        text_color="#000000",
        width=383,
        height=180,
        wraplength=380,
        justify="left"
    )
    scheme_description2.place(x=21, y=280)


def show_fourth_panel():
    # Clear previous widgets
    for widget in container.winfo_children():
        widget.destroy()

    # Create main container frame that will hold both the back button and scrollable frame
    main_frame = ctk.CTkFrame(container, fg_color="#BEEFF3")
    main_frame.pack(fill="both", expand=True)

    # Back button - placed in the main frame (not in the scrollable frame)
    back_button = ctk.CTkButton(
        main_frame,
        text="←",
        width=30,
        height=30,
        corner_radius=15,
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_main_panel
    )
    back_button.place(x=10, y=10)

    # Scrollable container
    scrollable_frame = ctk.CTkScrollableFrame(
        main_frame,
        fg_color="#BEEFF3",
        # Adjust height to account for back button
        height=container.winfo_height() - 50 if container.winfo_height() > 0 else 600
    )
