    )
    button2.place(x=80, y=585)

    label_btn_2 = ctk.CTkLabel(button2, text="ಇನ್ನಷ್ಟು ತಿಳಿದುಕೊಳ್ಳಲು ಇಲ್ಲಿ ಕ್ಲಿಕ್\nಮಾಡಿ!", font=("Inter Regular", 15))
    label_btn_2.place(x=14, y=9)

    try:
