    except:
        fallback2 = ctk.CTkLabel(frame2, text="Image not found", font=("Inter Medium", 15))
        fallback2.place(x=19, y=62, width=384, height=245)

    desc2 = ctk.CTkLabel(
        frame2,
        text="ಪ್ರಧಾನ ಮಂತ್ರಿ ಮಾತೃ ವಂದನಾ ಯೋಜನೆ (PMMVY) ಗರ್ಭಿಣಿಯರು ಮತ್ತು ಹಾಲುಣಿಸುವ ತಾಯಂದಿರನ್ನು ಬೆಂಬಲಿಸಲು ಭಾರತ ಸರ್ಕಾರವು 2016 ರಲ್ಲಿ ಪ್ರಾರಂಭಿಸಿದ ಒಂದು ಪ್ರಮುಖ ಸಾಮಾಜಿಕ ಕಲ್ಯಾಣ ಯೋಜನೆಯಾಗಿದೆ. ಈ ಯೋಜನೆಯ ಪ್ರಾಥಮಿಕ ಉದ್ದೇಶವೆಂದರೆ ಗರ್ಭಧಾರಣೆ ಮತ್ತು ಹೆರಿಗೆಯ ಸಮಯದಲ್ಲಿ ಮಹಿಳೆಯರ ಆರೋಗ್ಯ ಮತ್ತು ಪೌಷ್ಠಿಕಾಂಶದ ಸ್ಥಿತಿಯನ್ನು ಸುಧಾರಿಸಲು ಆರ್ಥಿಕ ನೆರವು ನೀಡುವುದು, ಜೊತೆಗೆ ಉತ್ತಮ ತಾಯಂದಿರು ಮತ್ತು ಮಕ್ಕಳ ಆರೈಕೆಯನ್ನು ಉತ್ತೇಜಿಸುವುದು. ಗರ್ಭಿಣಿಯರು ಮತ್ತು ಹಾಲುಣಿಸುವ ತಾಯಂದಿರಿಗೆ ಹಣಕಾಸಿನ ನೆರವು ನೀಡುವ ಮೂಲಕ, ಈ ಯೋಜನೆಯು ಗರ್ಭಾವಸ್ಥೆಯಲ್ಲಿ ಮತ್ತು ಬಾಲ್ಯದಲ್ಲಿ ಉತ್ತಮ ಪೋಷಣೆ, ವೈದ್ಯಕೀಯ ಆರೈಕೆ ಮತ್ತು ಒಟ್ಟಾರೆ ಯೋಗಕ್ಷೇಮವನ್ನು ಖಚಿತಪಡಿಸಿಕೊಳ್ಳಲು ಸಹಾಯ ಮಾಡುತ್ತದೆ.",
        font=("Inter Regular", 15),
        text_color="#000000",
        width=383,
        height=224,
        wraplength=380,
        justify="left"
    )
    desc2.place(x=21, y=330)


def on_button_click1(button_text):
    if button_text == "ವಿಧವೆ":
        show_second_panel_kannada()
    elif button_text == "ಹಿರಿಯ\nನಾಗರಿಕ":
        show_third_panel_kannada()
    elif button_text == "ಮಕ್ಕಳು":
        show_fourth_panel_kannada()
    elif button_text == "ಹುಡುಗಿಯರು":
        show_fifth_panel_kannada()
    elif button_text == "ವಿದ್ಯಾರ್ಥಿ":
        show_sixth_panel_kannada()
    elif button_text == "ಮಹಿಳೆಯರು":
        show_seventh_panel_kannada()

# Start with welcome screen


create_welcome_screen()
# Run the main loop
root.mainloop()
