def on_button_click(button_text):
    if button_text == "WIDOWS":
        show_second_panel()
    elif button_text == "SENIOR\nCITIZEN":
        show_third_panel()
    elif button_text == "CHILDREN":
        show_fourth_panel()
    elif button_text == "GIRLS":
        show_fifth_panel()
    elif button_text == "STUDENTS":
        show_sixth_panel()
    elif button_text == "WOMEN":
        show_seventh_panel()


def show_second_panel_kannada():
    # Clear the container
    for widget in container.winfo_children():
        widget.destroy()

    # Create scrollable frame
    scrollable_frame = ctk.CTkScrollableFrame(container, fg_color="#BEEFF3")
    scrollable_frame.pack(fill="both", expand=True)

    # Create a container frame inside the scrollable frame for the back button
    button_container = ctk.CTkFrame(scrollable_frame, fg_color="transparent")
    button_container.pack(fill="x", padx=10, pady=10)

    back_button = ctk.CTkButton(
        button_container,
        text="←",
        width=30,
        height=30,
        corner_radius=15,  # Makes it circular
        fg_color="white",
        text_color="black",
        hover_color="#e0e0e0",
        font=("Arial", 14, "bold"),
        command=create_main_panel1
    )
    back_button.pack(side="left", anchor="nw")

    # First frame in scrollable area
    frame1 = ctk.CTkFrame(scrollable_frame, width=400, height=622, corner_radius=10, fg_color="#FFFFFF")
    frame1.pack(pady=15, fill="x", expand=True)

    # Add content to frame1
    textfield1 = ctk.CTkLabel(frame1, text="1.ಸ್ವಧಾರ್ ಗೃಹ ಯೋಜನೆ", font=("Inter Medium", 20), text_color="#000000")
    textfield1.place(x=21, y=13)

    def open_swadhar_scheme():
        webbrowser.open("https://www.india.gov.in/spotlight/swadhar-greh-scheme")

    # Add the clickable button to frame1
    info_button = ctk.CTkButton(
        frame1,
        text="",
        width=300,
        height=45,
        corner_radius=25,
        fg_color="#6CCBFF",
        hover_color="#5BB0E0",
        command=open_swadhar_scheme
    )
    info_button.place(x=61, y=564)

    # Add the text label inside the button
    button_text = ctk.CTkLabel(
        info_button,
        text="ಇನ್ನಷ್ಟು ತಿಳಿದುಕೊಳ್ಳಲು ಇಲ್ಲಿ ಕ್ಲಿಕ್ ಮಾಡಿ",
        width=260,
        height=28,
        font=("Inter Regular", 15)
    )
    button_text.place(x=14, y=9)

    # Load and display image in frame1
    try:
        image = Image.open("C:\\Users\\AYUSH ADITYA\\Pictures\\Screenshots\\Screenshot (78).png")
        image = image.resize((384, 245))
        img_tk = ctk.CTkImage(light_image=image, size=(384, 245))
        image_label = ctk.CTkLabel(frame1, image=img_tk, text="")
        image_label.image = img_tk
        image_label.place(x=19, y=62)
    except:
        no_image_label = ctk.CTkLabel(frame1, text="Image not found", font=("Inter Medium", 15))
        no_image_label.place(x=19, y=62, width=384, height=245)

    # Add the text field
